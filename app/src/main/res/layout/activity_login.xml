<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrnd2"
    tools:context=".PickerLogin">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="280dp"
        android:layout_height="400dp"
        android:background="@drawable/btnrash"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/linearlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="@drawable/background_shape"
        android:orientation="vertical"
        android:padding="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/plEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btnlightgray">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/blackemail"
                android:drawablePadding="10dp"
                android:hint="@string/email_id"
                android:inputType="textEmailAddress"
                tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/plPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="11dp"
            android:background="@drawable/btnlightgray"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="textPassword"
                tools:ignore="TextContrastCheck,TextContrastCheck,TextContrastCheck,TextContrastCheck,TextContrastCheck,TextContrastCheck,TextContrastCheck,TextContrastCheck,TextContrastCheck,TextContrastCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/pllogin"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/btnrash"
            android:drawableStart="@drawable/black_login"
            android:drawablePadding="-20sp"
            android:fontFamily="@font/cairo"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/login"
            android:textColor="@color/defaultColor"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck,TextContrastCheck" />

        <TextView
            android:id="@+id/pltextview4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/cairo"
            android:text="@string/don_t_have_an_account_create"
            android:textColor="@color/defaultColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TableRow
                android:id="@+id/rash1"
                android:layout_width="60dp"
                android:layout_height="3dp"
                android:layout_marginStart="28dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btnrash" />

            <TextView
                android:id="@+id/or"
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:text="@string/OR"
                android:textAlignment="center"
                android:textColor="@color/defaultColor"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TableRow
                android:id="@+id/rash2"
                android:layout_width="60dp"
                android:layout_height="3dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btnrash" />

        </LinearLayout>

        <TextView
            android:id="@+id/signphone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/cairo"
            android:gravity="center"
            android:text="@string/signin_with"
            android:textColor="@color/defaultColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/plphone"
            android:layout_width="150dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/btnrash"
            android:drawableStart="@drawable/blackphone"
            android:drawablePadding="-20sp"
            android:fontFamily="@font/cairo"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/phone"
            android:textColor="@color/defaultColor"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>